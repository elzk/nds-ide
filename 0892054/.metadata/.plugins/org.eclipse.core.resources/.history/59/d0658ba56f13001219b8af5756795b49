#include "FreeRTOS.h"
#include "task.h"
#include <nds.h>
#include <stdio.h>
#include <time.h>
#include <stdlib.h>
#include "sevencore_io.h"

portTickType short_timer;
u16 barled;
int cur_led = 0;

#define NUM_STATE	9
#define NUM_INPUT	4

// Actions
static
void
(void *p)
{
	if(cur_led ==0)
		cur_led = 0x080;
	else
		cur_led = cur_led/2;
	writeb_virtual_io(BARLED1, cur_led);
	writeb_virtual_io(BARLED2, 0);
}

static
void
LEFT(void *p)
{
		cur_led= cur_led *2;
}


struct state_machine_x {
	int check_timer;
	int next_state[NUM_INPUT];
	void (* action[NUM_INPUT])(void *p);
};
enum { SW_ON, SW_OFF, TO , RTO};

struct state_machine_x SM[NUM_STATE] = {
		   // SW_ON              SW_OFF           TO
    { 0, { 1, 0, 0, 0 }, { f_ts, NULL, NULL, NULL },},    /* State 0 */
    { 1, { 1, 3, 2, 0 }, { NULL, NULL, NULL, NULL },},
    { 2, { 2, 4, 0, 0 }, { NULL, NULL, NULL, NULL },},
    { 3, { 5, 3, 0, 0 }, { NULL, NULL, NULL, RIGHT },},
    { 4, { 6, 4, 0, 0 }, { NULL, NULL, NULL, LEFT },},
    { 5, { 5, 0, 7, 0 }, { NULL, S_S, NULL, NULL },},
    { 6, { 6, 0, 8, 0 }, { NULL, L_S, NULL, NULL },},
    { 7, { 7, 0, 0, 0 }, { NULL, S_L, NULL, NULL },},
    { 8, { 8, 0, 0, 0 }, { NULL, L_L, NULL, NULL },},
	// Fill here
};

void
Exp_3_Homework(void)
{
    // variables

	while (1) {
		/* Step 0: Generate Input Event */

		/* Step 1: Do Action */

		/* Step 2: Set Next State */

		if (NDS_SWITCH() & KEY_START)
			break;
		vTaskDelay(MSEC2TICK(50));
	}
	while (NDS_SWITCH() & KEY_START)
		vTaskDelay(MSEC2TICK(10));		// Wait while START KEY is being pressed
}
