#include "FreeRTOS.h"
#include "task.h"
#include <nds.h>
#include <stdio.h>
#include <time.h>
#include <stdlib.h>
#include "sevencore_io.h"

portTickType short_timer;
u16 barled;
portTickType short_timer;

#define NUM_STATE	9
#define NUM_INPUT	3

// Actions
struct state_machine_x {
	int check_timer;
	int next_state[NUM_INPUT];
	void (* action[NUM_INPUT])(void *p);
};
enum { SW_ON, SW_OFF, TO };

struct state_machine_x SM[NUM_STATE] = {
	// Fill here
		{0, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 0
		{1, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 1
		{2, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 2
		{3, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 3
		{4, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 4
		{5, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 5
		{6, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 6
		{7, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 7
		{8, {4, 0, 0}, {f-ts, NULL, NULL}}, //상태 8
};

void
Exp_3_Homework(void)
{
    // variables
	int state;
	int input;

	printf("Exp_3_Homework\n");

	state = 0;							// Initial State 0 : All LED Off
	writeb_virtual_io(BARLED1, 0);
	writeb_virtual_io(BARLED2, 0);

	while (1) {
		/* Step 0: Generate Input Event */
		if (SM[state].check_timer) {
			if ((xTaskGetTickCount() - start_time_c) >= MSEC2TICK(200)) {
				input = TO;
				goto do_action;		// Input happens
			}
		}
		if (NDS_SWITCH() & KEY_A)
			input = SW_ON;
		else
			input = SW_OFF;

		/* Step 1: Do Action */
do_action:
		if (SM[state].action[input])
			SM[state].action[input](NULL);

		/* Step 2: Set Next State */
		state = SM[state].next_state[input];

		if (NDS_SWITCH() & KEY_START)
			break;
		vTaskDelay(MSEC2TICK(50));
	}
	while (NDS_SWITCH() & KEY_START)
		vTaskDelay(MSEC2TICK(10));		// Wait while START KEY is being pressed
}
