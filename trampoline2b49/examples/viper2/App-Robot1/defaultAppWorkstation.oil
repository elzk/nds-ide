OIL_VERSION = "2.5" : "test" ;

IMPLEMENTATION trampoline {
    TASK {
        UINT32 STACKSIZE = 32768 ;
        UINT32 PRIORITY = 1 ;
    } ;
    ISR {
        UINT32 STACKSIZE = 32768 ;
    } ;
};

CPU test {

    OS config {
        STATUS = EXTENDED;
        ERRORHOOK = FALSE;
        APP_SRC = "tpl_default_tasks_workstation.c";
        TRAMPOLINE_BASE_PATH = "../../..";
        CFLAGS  = "-Wall -Wformat -pedantic -std=c99";
        CFLAGS  = "-Wmissing-field-initializers -I.";
        LDFLAGS = "-lm";
        ASFLAGS = "";
        STARTUPHOOK = TRUE;
    } ;

    COUNTER SystemCounter {
        SOURCE = IRQ1;
    };

    ALARM alarmeSensors {
        COUNTER = SystemCounter;
        ACTION = ACTIVATETASK {
            TASK = SensorAndSendVector;
        };
        AUTOSTART = TRUE {
			ALARMTIME = 1;
			CYCLETIME = 2;
			APPMODE = std;
		};
    };

    TASK MotorControl {
        PRIORITY = 1;
        AUTOSTART = FALSE;
        ACTIVATION = 1;
        SCHEDULE = NON;
    };

    TASK SensorAndSendVector {
        PRIORITY = 2;
        AUTOSTART = TRUE { APPMODE = std; };
        ACTIVATION = 1;
        SCHEDULE = NON;
    };
    
    ISR Network {
        CATEGORY = 2 ;
		PRIORITY = 30;
		SOURCE = IRQ0;
    }; 
};
